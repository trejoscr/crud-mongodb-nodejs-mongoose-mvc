<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRUD MVC with Node JS and MongoDB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">
    <style>
      .container{
        max-width: 960px;
      }
    </style>
  </head>
  <body>
    
    <div class="container">
      <div class="p-4 shadow-lg pb-3 mb-5 bg-body rounded">
        <h4>Datos del Alumno</h4>

        <form action="/crear" method="POST">

          <div class="row">
            <div class="col-12 col-lg-6 mb-3">
              <label for="nombre">Nombre</label>
              <input type="text" class="form-control" id="nombre" name="nombre" placeholder="nombre ..." required>
            </div> 
            
            <div class="col-12 col-lg-6 mb-3">
              <label for="edad">Edad</label>
              <input type="number" class="form-control" id="edad" name="edad" placeholder="edad ..." required>
            </div>
          </div>

          <button type="submit" class="w-100 btn btn-guardar btn-primary btn-lg"><i class="bi bi-save"></i> Guardar</button>
        </form>

        <table class="table table-striped mt-5">
          <thead>
            <tr>
              <th class="hide">ID</th>
              <th>Nombre</th>
              <th>Edad</th>
              <th>Acciones</th>
            </tr>
          </thead>

          <tbody>

            <% alumnos.forEach( (alumno) => { %>
            <tr>
              <td class="hide"><%= alumno._id %></td>
              <td><%= alumno.nombre %></td>
              <td><%= alumno.edad %></td>
              <td>
                <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                <a href="/borrar/<%= alumno._id %>" class="btn btn-outline-danger bi bi-trash"></a>
              </td>
            </tr>
            <% }) %>

          </tbody>

        </table>

      </div>
    </div>

    <div id="modalAlumno" class="modal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Editar Info</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body">
            
            <form action="/editar" method="post">
              <input type="hidden" id="id_editar" name="id_editar">
              <div class="row">
                <div class="col-12 col-lg-6 mb-3">
                  <label for="nombre_editar">Nombre</label>
                  <input type="text" class="form-control" id="nombre_editar" name="nombre_editar" required value="">
                </div> 
                
                <div class="col-12 col-lg-6 mb-3">
                  <label for="edad_editar">Edad</label>
                  <input type="number" class="form-control" id="edad_editar" name="edad_editar" required value="">
                </div>
              </div>
    
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Actualizar</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="js/code.js"></script>
  </body>
</html>